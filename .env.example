# PropertyFinder API Configuration
# Copy this file to .env and fill in your credentials

# API Base URL
PF_API_BASE_URL=https://app.propertyfinder.ae/api/v1

# Authentication Credentials
# Get these from your PropertyFinder Expert account settings
PF_API_TOKEN=your_api_token_here
PF_CLIENT_ID=your_client_id_here
PF_CLIENT_SECRET=your_client_secret_here

# OAuth2 Configuration (if using OAuth)
PF_OAUTH_TOKEN_URL=https://auth.propertyfinder.com/oauth/token
PF_ACCESS_TOKEN=
PF_REFRESH_TOKEN=

# Company/Agency Information
PF_AGENCY_ID=your_agency_id_here
PF_BROKER_ID=your_broker_id_here

# Optional Settings
PF_REQUEST_TIMEOUT=30
PF_MAX_RETRIES=3
PF_DEBUG=false
PF_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36
PF_ACCEPT_LANGUAGE=en-US,en;q=0.9
PF_SKIP_MEDIA=false
PF_HTTP_PROXY=
PF_HTTPS_PROXY=
PF_WEBHOOK_SECRET=
PF_WEBHOOK_URL=

# Bulk Operations
PF_BULK_BATCH_SIZE=50
PF_BULK_DELAY_SECONDS=1

# Media Warnings
PF_MAX_IMAGES_WARN=15

# Bulk Upload Defaults (pre-fill these values in bulk uploads)
PF_DEFAULT_AGENT_EMAIL=
PF_DEFAULT_OWNER_EMAIL=

# ===========================================
# PRODUCTION SETTINGS (Railway)
# ===========================================

# Flask Secret Key (REQUIRED - change for production!)
SECRET_KEY=your_super_secret_key_change_in_production

# Database (optional - defaults to SQLite for local development)
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database

# Production flag (set automatically by Railway)
# RAILWAY_ENVIRONMENT=production
# PRODUCTION=true

# Port (set automatically by Railway)
# PORT=5000
